<%= form_with url: boards_path, method: :get, local: true, class: 'form-inline' do %>
  <div class="row">
    <div class="form-group mb-2 col-md-3">
      <%= text_field_tag :email, params[:email], class: 'form-control', placeholder: 'Email' %>
    </div>
    <div class="form-group mb-2 col-md-3">
      <%= text_field_tag :name, params[:name], class: 'form-control', placeholder: 'Name' %>
    </div>
    <div class="form-group mb-2 col-md-3">
      <%= text_field_tag :mines, params[:mines], class: 'form-control', placeholder: 'Mines' %>
    </div>
  </div>
  <div class="row">
    <div class="form-group mb-2 col-md-3">
      <%= date_field_tag :start_date, params[:start_date], class: 'form-control', placeholder: 'Start Date' %>
    </div>
    <div class="form-group mb-2 col-md-3">
      <%= date_field_tag :end_date, params[:end_date], class: 'form-control', placeholder: 'End Date' %>
    </div>
  </div>
  
  <%= submit_tag 'Search', class: 'btn btn-primary mb-2' %>
<% end %>